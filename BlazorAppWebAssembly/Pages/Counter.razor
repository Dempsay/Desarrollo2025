@page "/contador"
@inject ILogger<Counter> logger
<PageTitle>Contador</PageTitle>

<h1>Contador</h1>
@if (currentCount < 5)
{
    <p role="status">Contador Total: @currentCount</p>
}else
{
    <p role="status" class="text-danger">Current count: @currentCount</p>
}
<button class="btn btn-primary" @onclick="IncrementCount">Hazme Click</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        logger.LogInformation($"contador incrementado a {currentCount}");
    }
}
